<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;"> 
        <div class="container-fluid">
            <a class="navbar-brand" href="/user-data"><strong><span class="fa fa-user"></span> Usuario: {{user.name}} {{user.lastname}}  </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/logout"><i class="fas fa-toggle-off"></i> Salir</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>

    <hr>
    <div class="card text-center mt-2 border-dark" style="border-width: 10px; background-color: #e3f2fd;">
        <div class="card-body">
            <h1> <span class="fas fa-address-card"></span> Informaci√≥n del Usuario </h1>
            <div class="row">
                <div class="col-md-4">
                    <div class="calendar">
                        <form action="/user-data" method="POST">
                            <div class="form-group">
                                <h5 for="selectedDate"><span class="fas fa-calendar-alt"></span> Seleccionar fecha para visualizar los datos</h5>
                                <input type="date" name="selectedDate">   
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button class="btn btn-success btn-block"> Save </button>
                                </div>
                            </div>   
                        </form>
                        {{#if success}}
                            <h2> {{ success }}</h2>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>