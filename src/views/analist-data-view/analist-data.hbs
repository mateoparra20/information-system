<script>
    let measureArray = [];
    let labelChart = [];

    {{#each measure}}
        measureArray.push({{measure}})
        {{!-- labelChart.push({{vital_sign}}.toString()) --}}
        console.log(typeof({{vital_sign}}))
    {{/each}}


    console.log(labelChart);
    const labels = [
        'January',
        'February',
        'March',
        'April',
        'May',
        'June',
    ];

    const data = {
        labels: labels,
        datasets: [{
            label: labelChart,
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: measureArray,
        }]
    };

    const config = {
        type: 'line',
        data: data,
        options: {}
    };

    const myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
</script>
